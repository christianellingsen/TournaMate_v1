<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        //Here you can set style you want when Button is pressed
        <shape>
            <solid
                android:color="#bee6eb" />
            <stroke
                android:width="1dp"
                android:color="#bee6eb" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        //Here you can set style you want when button is notew pressed
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!-- you can use any color you want I used here gray color-->
            <solid android:color="#5b2194"/>
            <stroke
                android:width="1dp"
                android:color="#bee6eb" />
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                />
            <corners android:radius="5dp"/>

        </shape>
    </item>
</selector>


