<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/tournament_list_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        cardview:cardElevation="10dp"
        app:cardCornerRadius="3dp"
        android:backgroundTint="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
>

            <TextView
                android:id="@+id/found_tournament_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:text="Name"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/found_tournament_list_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:gravity="left"
                android:text="date created"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/found_tournament_list_name"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/found_tournament_list_createdBy"
                android:layout_width="match_parent"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="created by"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/found_tournament_list_date"
                android:layout_alignParentStart="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_below="@+id/found_tournament_list_createdBy"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/found_tournament_list_open"
                    android:layout_width="0dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="open"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/found_tournament_list_status"
                    android:layout_width="0dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="status"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

