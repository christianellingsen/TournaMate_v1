<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="130dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6"
        android:background="#efefef"
        android:layout_margin="5dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_weight="2"
            android:alpha="1"
            android:background="#00ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match # X"
                style="@style/txt_h2"
                android:id="@+id/newMatchlist_matchNumber"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                style="@style/txt_h2"
                android:id="@+id/newMatchlist_matchTitle"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/isPlayedCheckIV"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                 />
        </RelativeLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:background="#00ffffff">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="7dp"
                android:paddingLeft="5dp">

                <android.support.v7.widget.CardView
                    xmlns:cardview="http://schemas.android.com/tools"
                    android:id="@+id/match_t1_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    cardview:cardElevation="10dp"

                    android:elevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:id="@+id/t1_badge"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true" />

                        <TextView
                            android:id="@+id/match_t1_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Team1 name"
                            android:textAppearance="@style/txt_h2"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/match_t1_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAppearance="@style/match_result" />

                <TextView
                    android:id="@+id/match_vs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="vs"
                    android:padding="5dp"
                    android:textAppearance="@style/txt_h1" />

                <TextView
                    android:id="@+id/match_t2_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAppearance="@style/match_result" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="7dp"
                android:paddingRight="5dp">

                <android.support.v7.widget.CardView
                    xmlns:cardview="http://schemas.android.com/tools"
                    android:id="@+id/match_t2_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    cardview:cardElevation="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:id="@+id/t2_badge"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true" />

                        <TextView
                            android:id="@+id/match_t2_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Team2 name"
                            android:textAppearance="@style/txt_h2"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff">
    </FrameLayout>
</LinearLayout>