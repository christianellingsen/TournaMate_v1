<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_weight="3"
    android:gravity="center_vertical"
    android:background="#efefef"
    android:elevation="5dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="7dp"
        android:paddingLeft="5dp">

    <android.support.v7.widget.CardView
        xmlns:cardview="http://schemas.android.com/tools"
        android:id="@+id/match_t1_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        cardview:cardElevation="10dp"

        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4"
            android:elevation="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/t1_badge"
                android:layout_gravity="right"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/match_t1_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Team1 name"
                android:textAppearance="@style/txt_h2"
                android:gravity="center" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/match_t1_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textAppearance="@style/match_result" />

        <TextView
            android:id="@+id/match_vs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="vs"
            android:padding="5dp"
            android:textAppearance="@style/txt_h1" />

        <TextView
            android:id="@+id/match_t2_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textAppearance="@style/match_result" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="7dp"
        android:paddingRight="5dp">

    <android.support.v7.widget.CardView
        xmlns:cardview="http://schemas.android.com/tools"
        android:id="@+id/match_t2_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        cardview:cardElevation="10dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:elevation="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/t2_badge"
            android:layout_gravity="left"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/match_t2_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="Team2 name"
            android:textAppearance="@style/txt_h2"
            android:gravity="center" />

    </LinearLayout>


    </android.support.v7.widget.CardView>

        </LinearLayout>
</LinearLayout>